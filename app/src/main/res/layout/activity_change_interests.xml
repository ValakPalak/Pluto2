<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ChangeInterests">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="#666666" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Change Interests"
            android:textAlignment="center"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textColor="#242933"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select any 3"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:textColor="#8F8F8F"
        android:textSize="16dp"
        android:layout_marginBottom="20dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/one"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:backgroundTint="#F5F5F5"
            android:background="@drawable/shape">
            <ImageView

                android:src="@drawable/business"
                android:layout_height="73dp"
                android:layout_width="73dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:text="Business"
                android:textSize="10dp"
                android:gravity="center_horizontal"
                android:textColor="#242933"
                android:fontFamily="@font/poppins"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/two"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
            android:layout_margin="5dp"
        android:orientation="vertical"
        android:backgroundTint="#F5F5F5"
        android:background="@drawable/shape" >
        <ImageView

            android:src="@drawable/leadership"
            android:layout_height="73dp"
            android:layout_width="73dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:text="Leadership"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:textColor="#242933"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/three"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:backgroundTint="#F5F5F5"
            android:background="@drawable/shape" >
            <ImageView

                android:src="@drawable/freelancers"
                android:layout_height="73dp"
                android:layout_width="73dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:text="Freelancers"
                android:textSize="10dp"
                android:gravity="center_horizontal"
                android:textColor="#242933"
                android:fontFamily="@font/poppins"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/four"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:backgroundTint="#F5F5F5"
            android:background="@drawable/shape" >
            <ImageView

                android:src="@drawable/entrepreneur"
                android:layout_height="73dp"
                android:layout_width="73dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:text="Enterpreneur"
                android:textSize="10dp"
                android:gravity="center_horizontal"
                android:textColor="#242933"
                android:fontFamily="@font/poppins"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/five"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:backgroundTint="#F5F5F5"
            android:background="@drawable/shape" >
            <ImageView

                android:src="@drawable/marketing"
                android:layout_height="73dp"
                android:layout_width="73dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:text="Marketing"
                android:textSize="10dp"
                android:gravity="center_horizontal"
                android:textColor="#242933"
                android:fontFamily="@font/poppins"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/six"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:backgroundTint="#F5F5F5"
            android:background="@drawable/shape" >
            <ImageView

                android:src="@drawable/tecnical"
                android:layout_height="73dp"
                android:layout_width="73dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:text="Technical"
                android:textSize="10dp"
                android:gravity="center_horizontal"
                android:textColor="#242933"
                android:fontFamily="@font/poppins"/>
        </LinearLayout>



    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/savechanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="#0D70D8"
            android:text="Save Changes"

            android:textAllCaps="false"
            android:fontFamily="@font/poppins"
            android:paddingVertical="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>
    </LinearLayout>



</LinearLayout>